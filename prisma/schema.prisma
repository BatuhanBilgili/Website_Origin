generator client {
  provider = "prisma-client-js"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Admin {
  id        Int     @id @default(autoincrement())
  username  String  @unique
  password  String
  createdAt DateTime @default(now())
}

model About {
  id        Int     @id @default(autoincrement())
  content   String
  updatedAt DateTime @updatedAt
}

model Experience {
  id          Int     @id @default(autoincrement())
  title       String
  company     String
  date        String
  isCurrent   Boolean @default(false)
  description String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Certificate {
  id        Int     @id @default(autoincrement())
  title     String
  category  String
  imageUrl  String
  link      String?
  createdAt DateTime @default(now())
}
